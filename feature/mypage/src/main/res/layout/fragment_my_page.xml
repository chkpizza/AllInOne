<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.wantique.mypage.ui.mypage.MyPageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mypage.MyPageFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_page_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/my_page_tv_toolbar_title"
                style="@style/toolbarTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/my_page_toolbar_title" />

        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/my_page_view_divide_toolbar"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_page_toolbar" />

        <app.juky.squircleview.views.SquircleImageView
            android:id="@+id/my_page_iv_profile"
            android:layout_width="104dp"
            android:layout_height="104dp"
            app:profileImage="@{vm.profile}"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_page_view_divide_toolbar"
            app:squircle_background_color="@color/disabledBackground" />

        <TextView
            android:id="@+id/my_page_tv_nick_name"
            style="@style/largeTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:nickName="@{vm.profile}"
            app:layout_constraintBottom_toBottomOf="@id/my_page_iv_profile"
            app:layout_constraintStart_toEndOf="@id/my_page_iv_profile"
            app:layout_constraintTop_toTopOf="@id/my_page_iv_profile" />

        <View
            android:id="@+id/my_page_separator_profile"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_iv_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/separator"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/my_page_tv_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/my_page_recommend_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_page_separator_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            style="@style/defaultTextViewStyle"/>

        <View
            android:id="@+id/my_page_separator_recommend"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_tv_recommend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/separator" />

        <TextView
            android:id="@+id/my_page_tv_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/my_page_update_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_page_separator_recommend"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            style="@style/defaultTextViewStyle"/>

        <View
            android:id="@+id/my_page_separator_update"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_tv_update"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/separator" />

        <TextView
            android:id="@+id/my_page_tv_privacy_policy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/my_page_privacy_policy_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_page_separator_update"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            style="@style/defaultTextViewStyle"/>

        <View
            android:id="@+id/my_page_separator_privacy_policy"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_tv_privacy_policy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/separator" />

        <TextView
            android:id="@+id/my_page_tv_open_source_license"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/my_page_open_source_license_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_page_separator_privacy_policy"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            style="@style/defaultTextViewStyle"/>

        <View
            android:id="@+id/my_page_separator_open_source_license"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_tv_open_source_license"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/separator" />

        <TextView
            android:id="@+id/my_page_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/my_page_separator_open_source_license"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/defaultTextViewStyle"
            android:textColor="@color/subText"
            android:text="로그아웃"
            android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>