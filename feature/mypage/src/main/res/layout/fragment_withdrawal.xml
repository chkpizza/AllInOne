<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="com.wantique.base.state.UiState" />
        <variable
            name="vm"
            type="com.wantique.mypage.ui.edit.EditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.edit.WithdrawalFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/withdrawal_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?attr/homeAsUpIndicator">

            <TextView
                android:id="@+id/withdrawal_tv_toolbar_title"
                style="@style/toolbarTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/withdrawal_toolbar_title" />

        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/withdrawal_view_divide_toolbar"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/withdrawal_toolbar" />

        <TextView
            android:id="@+id/withdrawal_tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/withdrawal_view_divide_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/largeTextViewStyle"
            android:textSize="20sp"
            android:text="그동안 LiveData 를 이용해주셔서\n감사합니다."/>

        <TextView
            android:id="@+id/withdrawal_tv_caution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/withdrawal_tv_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="*회원 탈퇴 유의사항\n\n(1) 30일 이내 로그인 시 탈퇴 철회를 신청하실 수 있습니다.\n\n(2) 탈퇴 철회 기간 이후 사용자 데이터는 완전 삭제됩니다"
            android:textColor="@color/subText"
            style="@style/smallTextViewStyle"/>

        <TextView
            android:id="@+id/withdrawal_tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/withdrawal_tv_caution"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/titleTextViewStyle"
            android:text="회원 탈퇴 동의"/>

        <TextView
            android:id="@+id/withdrawal_tv_essential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/withdrawal_tv_agree"
            app:layout_constraintStart_toEndOf="@id/withdrawal_tv_agree"
            app:layout_constraintBottom_toBottomOf="@id/withdrawal_tv_agree"
            style="@style/titleTextViewStyle"
            android:textColor="@color/colorPrimary"
            android:text="*"/>

        <CheckBox
            android:id="@+id/withdrawal_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/withdrawal_tv_agree"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/withdrawal_tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/withdrawal_cb"
            app:layout_constraintTop_toTopOf="@id/withdrawal_cb"
            app:layout_constraintStart_toEndOf="@id/withdrawal_cb"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/smallTextViewStyle"
            android:text="회원 탈퇴 유의사항을 모드 확인하였으며, 회원 탈퇴에 동의합니다."/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/withdrawal_btn_withdrawal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="회원 탈퇴하기"
            style="@style/defaultButtonStyle"/>

        <include layout="@layout/layout_error"
            android:id="@+id/daily_layout_error"
            bind:baseVM="@{vm}" />

        <ProgressBar
            android:id="@+id/daily_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{(vm.loadingState instanceof UiState.Loading) ? View.VISIBLE : View.GONE}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>