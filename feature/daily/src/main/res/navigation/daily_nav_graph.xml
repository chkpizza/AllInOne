<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/daily_nav_graph"
    app:startDestination="@id/dailyFragment">

    <fragment
        android:id="@+id/dailyFragment"
        android:name="com.wantique.daily.ui.daily.DailyFragment"
        android:label="DailyFragment" >
        <action
            android:id="@+id/action_dailyFragment_to_writeRecordFragment"
            app:destination="@id/writeRecordFragment" />
        <action
            android:id="@+id/action_dailyFragment_to_recordFragment"
            app:destination="@id/recordFragment" />
        <action
            android:id="@+id/action_dailyFragment_to_pastExamFragment"
            app:destination="@id/pastExamFragment" />
    </fragment>
    <fragment
        android:id="@+id/writeRecordFragment"
        android:name="com.wantique.daily.ui.record.WriteRecordFragment"
        android:label="WriteRecordFragment" />
    <fragment
        android:id="@+id/recordFragment"
        android:name="com.wantique.daily.ui.record.RecordFragment"
        android:label="fragment_record"
        tools:layout="@layout/fragment_record">
        <argument
            android:name="position"
            app:argType="integer" />

        <argument
            android:name="record"
            app:argType="com.wantique.daily.domain.model.Record[]" />
    </fragment>
    <fragment
        android:id="@+id/pastExamFragment"
        android:name="com.wantique.daily.ui.pastExam.PastExamFragment"
        android:label="PastExamFragment">
        <argument
            android:name="paseExam"
            app:argType="com.wantique.daily.domain.model.PastExam[]" />
    </fragment>
</navigation>