<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="com.wantique.base.state.UiState" />
        <variable
            name="vm"
            type="com.wantique.daily.ui.record.RecordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.record.WriteRecordFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/write_record_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/write_record_tv_toolbar_title"
                style="@style/toolbarTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/write_record_toolbar_title" />

        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/write_record_view_divide_toolbar"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/write_record_toolbar" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/write_record_container_add_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/write_record_view_divide_toolbar"
            app:strokeColor="@color/stroke"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/write_record_iv_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_photo" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/write_record_container_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            android:visibility="@{(vm.uri instanceof UiState.Success) ? View.VISIBLE : View.GONE }"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/write_record_container_add_image"
            app:layout_constraintTop_toTopOf="@id/write_record_container_add_image"
            app:strokeColor="@color/stroke"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/write_record_iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:uploadImage="@{vm.uri}"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/write_record_iv_remove_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="@{(vm.uri instanceof UiState.Success) ? View.VISIBLE : View.GONE }"
            app:layout_constraintBottom_toTopOf="@id/write_record_container_image"
            app:layout_constraintEnd_toEndOf="@id/write_record_container_image"
            app:layout_constraintStart_toEndOf="@id/write_record_container_image"
            app:layout_constraintTop_toTopOf="@id/write_record_container_image"
            app:srcCompat="@drawable/ic_remove" />

        <EditText
            android:id="@+id/write_record_et_body"
            style="@style/borderlessEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="top"
            android:hint="최대 200 글자까지 입력이 가능합니다"
            android:maxLength="200"
            android:maxLines="10"
            app:layout_constraintBottom_toTopOf="@id/write_record_btn_registration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/write_record_container_add_image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/write_record_btn_registration"
            style="@style/defaultButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:text="등록하기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <include layout="@layout/layout_error"
            android:id="@+id/write_record_layout_error"
            bind:baseVM="@{vm}" />

        <ProgressBar
            android:id="@+id/home_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{(vm.loadingState instanceof UiState.Loading) ? View.VISIBLE : View.GONE}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>